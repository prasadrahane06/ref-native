{
    "cli": {
        "version": ">= 9.1.0"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal"
        },
        "ios-simulator": {
            "extends": "development",
            "ios": {
                "simulator": true
            }
        },
        "preview": {
            "android": {
                "buildType": "apk",
                "gradleCommand": ":app:assembleRelease"
            },
            "ios": {
                "buildConfiguration": "Release"
            }
        },
        "production": {
            "android": {
                "buildType": "apk"
            }
        }
    },
    "submit": {
        "production": {}
    }
}
